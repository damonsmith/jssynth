{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "module": "commonjs",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "rootDir": "src",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "configFile": "./tslint.json"
            }
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/index.ts"
    ],
    "compileOnSave": false
}